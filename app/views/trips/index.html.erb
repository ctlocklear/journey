<p id="notice"><%= notice %></p>

<div class="page-header">
<h1>Trips</h1>
<h6>..or journeys, adventures, weekend getaways, dreams. You make the call.</h3>
</div>

<button type="button" class="btn btn-default">
<%= link_to "Create a New Trip", new_trip_path %>
</button>

<% @trips.each do |trip| %>
<div class = "trip"
  <strong><%=trip.trip_name %></strong>
  <p><%=trip.destination %></p>
  <div class = "meta">
    <button type="button" class="btn btn-success">
    <%= link_to "Trip Itinerary", new_itinerary_path %>
  </button> <button type="button" class="btn btn-default">
    <%= link_to "Trip Notes", new_note_path %>
  </button>
  <span class="admin">
    <button type="button" class="btn btn-warning">
    <%= link_to "Edit", edit_trip_path(trip) %>
  </button>
   <button type="button" class="btn btn-danger">
    <%= link_to "Delete", trip, method: :delete, data: { confirm: "Woah! Are you sure you want to delete this trip?"} %>
  </button>
  </span><br>
  <%= link_to "Trip created " + time_ago_in_words(trip.created_at) + " ago", trip %>
  </div>

  </div>
<% end %>
