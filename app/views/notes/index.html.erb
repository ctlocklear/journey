 <p id="notice"><%= notice %></p> 

 <div class="page-header">
  <h1>Notes</h1>
  <h6>Write down your packing list, reminders, tips, bucketlists....you get the picture.</h6>
</div>

<button type="button" class="btn btn-default">
  <%= link_to "Create a New Note", new_note_path %>
</button>

<% @notes.each do |note| %>
<div class ="note">
  Activity Name:<strong>  <%= note.content %></strong>

<div class = "meta">
  <button type="button" class="btn btn-success">
    <%= link_to "Trip", trips_path %>
  </button> 


  <span class="admin">
    <button type="button" class="btn btn-warning">
      <%= link_to "Edit", edit_note_path(note) %>
    </button>
    <button type="button" class="btn btn-danger">
      <%= link_to "Delete", note, method: :delete, data: { confirm: "Woah! Are you sure you want to delete this note?"} %>
    </button>

  </span><br>
  <%= link_to "Note created " + time_ago_in_words(note.created_at) + " ago", note %>
</div>
</div>
<% end %>
